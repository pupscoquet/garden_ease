<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "auth-container" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "auth-input"} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "auth-input" } %>
    <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
  <%= render "devise/shared/links" %>

<% end %>

