<div class="main-container">
  <%# <div class="my-projects"> %>
    <% if @projects.empty? %>
      <div class="about-container">
        <div class="left" id="noprojects-left">
          <h3 class="about-us">My projects</h3>
          <p class="about-p">You don't have any projects yet.</p>
          <p class="about-p">Create your first project!</p>
          <a href="/benefits/new" class="btn button-purple">Let's get started</a>
        </div>
        <div class="right">
          <img class="plant" src="<%= asset_url("plant2.png")%>"  alt="plant">
        </div>
      </div>
    <% else%>
      <h3 class="about-us">My projects</h3>
      <div class="project-cards">
        <ul class="projects-ul">
          <% @projects.each do |project| %>
            <li class="projects-li">
              <%= link_to project_results_path(project) do %>
                <div class="image-container">
                  <img class="plant-item"src="<%= asset_url(project.picture)%>" alt="plant">
                </div>
                <h5><%= project.name %></h5>
              <% end %>
              <%= link_to project_path(project), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                <p>&#128465; Delete</p>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <%# </div> %>
</div>
